<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PocxWallet.UI.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="PocxWallet.UI.Views.ServiceView"
             x:DataType="vm:ServiceViewModel">

    <ScrollViewer>
        <StackPanel Spacing="20">
            <!-- Page Title -->
            <TextBlock Text="{Binding ServiceName}" Classes="heading1" />

            <!-- Status Card -->
            <Border Classes="card">
                <StackPanel Spacing="15">
                    <TextBlock Text="Status" Classes="heading2" />
                    
                    <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                        <TextBlock Text="{Binding StatusText}" 
                                   FontSize="16"
                                   FontWeight="SemiBold" />
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                        <Button Content="Toggle Service" 
                                Classes="primary"
                                Command="{Binding ToggleServiceCommand}" />
                        <Button Content="Refresh Logs" 
                                Classes="secondary"
                                Command="{Binding RefreshLogsCommand}"
                                IsEnabled="{Binding IsRunning}" />
                        <Button Content="Parameters" 
                                Classes="secondary"
                                Command="{Binding EditParametersCommand}" />
                        <Button Content="Settings" 
                                Classes="secondary"
                                Command="{Binding EditSettingsCommand}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Logs Card -->
            <Border Classes="card">
                <StackPanel Spacing="15">
                    <TextBlock Text="Logs" Classes="heading2" />
                    
                    <Border Background="{StaticResource PocxBackgroundDarkBrush}"
                            BorderBrush="{StaticResource PocxBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="10"
                            MinHeight="300"
                            MaxHeight="400">
                        <ScrollViewer>
                            <TextBlock Text="{Binding Logs}" 
                                       FontFamily="Consolas, Courier New, monospace"
                                       FontSize="11"
                                       TextWrapping="Wrap"
                                       Foreground="{StaticResource PocxTextSecondaryBrush}" />
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
