<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PocxWallet.UI.ViewModels"
        xmlns:views="using:PocxWallet.UI.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
        x:Class="PocxWallet.UI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="{Binding Title}"
        Width="1200" Height="750"
        MinWidth="900" MinHeight="650">

    <Window.Styles>
        <StyleInclude Source="/Styles/Theme.axaml" />
    </Window.Styles>

    <Window.DataTemplates>
        <DataTemplate DataType="vm:WalletViewModel">
            <views:WalletView />
        </DataTemplate>
        <DataTemplate DataType="vm:ServiceViewModel">
            <views:ServiceView />
        </DataTemplate>
        <DataTemplate DataType="vm:SettingsViewModel">
            <views:SettingsView />
        </DataTemplate>
        <DataTemplate DataType="vm:AboutViewModel">
            <views:AboutView />
        </DataTemplate>
    </Window.DataTemplates>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <Border Grid.Column="0" 
                Background="{StaticResource PocxPanelBrush}"
                BorderBrush="{StaticResource PocxBorderBrush}"
                BorderThickness="0,0,1,0">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Logo and Title -->
                <StackPanel Grid.Row="0" Margin="20" Spacing="10">
                    <TextBlock Text="PoCX" 
                               FontSize="36" 
                               FontWeight="Bold"
                               Foreground="{StaticResource PocxAccentBrush}"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="Wallet" 
                               FontSize="18"
                               Foreground="{StaticResource PocxTextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,-8,0,0" />
                    <TextBlock Text="{Binding Version}" 
                               FontSize="11"
                               Foreground="{StaticResource PocxTextDisabledBrush}"
                               HorizontalAlignment="Center" />
                </StackPanel>

                <Separator Grid.Row="0" Height="1" 
                           Background="{StaticResource PocxBorderBrush}"
                           Margin="10,0"
                           VerticalAlignment="Bottom" />

                <!-- Navigation Items -->
                <ListBox Grid.Row="1"
                         ItemsSource="{Binding NavigationItems}"
                         SelectedIndex="0"
                         Margin="8,15,8,8"
                         Name="NavigationList"
                         Background="Transparent"
                         BorderThickness="0"
                         SelectionChanged="NavigationList_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" 
                                        Spacing="12"
                                        Margin="8,6">
                                <TextBlock Text="{Binding Icon}" 
                                           FontSize="18" 
                                           VerticalAlignment="Center" />
                                <TextBlock Text="{Binding Label}" 
                                           FontSize="14"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Footer -->
                <StackPanel Grid.Row="2" Margin="15,10" Spacing="5">
                    <Separator Height="1" Background="{StaticResource PocxBorderBrush}" />
                    <TextBlock Text="© 2025 EviLSeeD" 
                               FontSize="10"
                               Foreground="{StaticResource PocxTextDisabledBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ContentControl Grid.Column="1" 
                        Content="{Binding CurrentView}"
                        Margin="25" />
    </Grid>
</Window>
