<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="using:PocxWallet.UI.Converters">
    
    <Style>
        <Style.Resources>
            <!-- Converters -->
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
            <converters:BoolToStringConverter x:Key="BoolToStringConverter" />
            <converters:IsNotNullOrEmptyConverter x:Key="IsNotNullOrEmptyConverter" />
            <converters:BoolToBackgroundConverter x:Key="BoolToBackgroundConverter" />
            <converters:BoolToBorderConverter x:Key="BoolToBorderConverter" />
            <converters:BoolToForegroundConverter x:Key="BoolToForegroundConverter" />
            
            <!-- PoCX Brand Colors - Proof of Capacity Theme -->
            
            <!-- Primary Colors - Deep blue/teal representing storage/data -->
            <Color x:Key="PocxPrimaryDark">#0D1B2A</Color>
            <Color x:Key="PocxPrimary">#1B4965</Color>
            <Color x:Key="PocxPrimaryLight">#2A5F7F</Color>
            
            <!-- Accent Colors - Bright cyan/electric blue representing active mining/capacity -->
            <Color x:Key="PocxAccent">#00D9FF</Color>
            <Color x:Key="PocxAccentHover">#33E0FF</Color>
            <Color x:Key="PocxAccentPressed">#00B8D9</Color>
            
            <!-- Status Colors -->
            <Color x:Key="PocxSuccess">#00C853</Color>
            <Color x:Key="PocxWarning">#FFB300</Color>
            <Color x:Key="PocxError">#FF3D00</Color>
            
            <!-- Background Colors - Dark gradient -->
            <Color x:Key="PocxBackgroundDark">#0A0F1A</Color>
            <Color x:Key="PocxBackground">#1A1A2E</Color>
            <Color x:Key="PocxBackgroundLight">#252541</Color>
            
            <!-- Panel/Card Colors - Semi-transparent dark -->
            <Color x:Key="PocxPanel">#CC1E2A3A</Color> <!-- 80% opacity -->
            <Color x:Key="PocxPanelHover">#E61E2A3A</Color> <!-- 90% opacity -->
            <Color x:Key="PocxBorder">#3A4556</Color>
            
            <!-- Text Colors -->
            <Color x:Key="PocxTextPrimary">#FFFFFF</Color>
            <Color x:Key="PocxTextSecondary">#B0B8C4</Color>
            <Color x:Key="PocxTextDisabled">#6B7280</Color>
            
            <!-- Brushes -->
            <SolidColorBrush x:Key="PocxPrimaryDarkBrush" Color="{StaticResource PocxPrimaryDark}" />
            <SolidColorBrush x:Key="PocxPrimaryBrush" Color="{StaticResource PocxPrimary}" />
            <SolidColorBrush x:Key="PocxPrimaryLightBrush" Color="{StaticResource PocxPrimaryLight}" />
            
            <SolidColorBrush x:Key="PocxAccentBrush" Color="{StaticResource PocxAccent}" />
            <SolidColorBrush x:Key="PocxAccentHoverBrush" Color="{StaticResource PocxAccentHover}" />
            <SolidColorBrush x:Key="PocxAccentPressedBrush" Color="{StaticResource PocxAccentPressed}" />
            
            <SolidColorBrush x:Key="PocxSuccessBrush" Color="{StaticResource PocxSuccess}" />
            <SolidColorBrush x:Key="PocxWarningBrush" Color="{StaticResource PocxWarning}" />
            <SolidColorBrush x:Key="PocxErrorBrush" Color="{StaticResource PocxError}" />
            
            <SolidColorBrush x:Key="PocxBackgroundDarkBrush" Color="{StaticResource PocxBackgroundDark}" />
            <SolidColorBrush x:Key="PocxBackgroundBrush" Color="{StaticResource PocxBackground}" />
            <SolidColorBrush x:Key="PocxBackgroundLightBrush" Color="{StaticResource PocxBackgroundLight}" />
            
            <SolidColorBrush x:Key="PocxPanelBrush" Color="{StaticResource PocxPanel}" />
            <SolidColorBrush x:Key="PocxPanelHoverBrush" Color="{StaticResource PocxPanelHover}" />
            <SolidColorBrush x:Key="PocxBorderBrush" Color="{StaticResource PocxBorder}" />
            
            <SolidColorBrush x:Key="PocxTextPrimaryBrush" Color="{StaticResource PocxTextPrimary}" />
            <SolidColorBrush x:Key="PocxTextSecondaryBrush" Color="{StaticResource PocxTextSecondary}" />
            <SolidColorBrush x:Key="PocxTextDisabledBrush" Color="{StaticResource PocxTextDisabled}" />
            
            <!-- Background Gradient -->
            <LinearGradientBrush x:Key="PocxBackgroundGradientBrush" StartPoint="0%,0%" EndPoint="100%,100%">
                <GradientStop Offset="0" Color="{StaticResource PocxBackgroundDark}" />
                <GradientStop Offset="1" Color="{StaticResource PocxBackground}" />
            </LinearGradientBrush>
        </Style.Resources>
    </Style>
    
</Styles>
